# =============================================================================
# LLM API Configuration (REQUIRED - at least one)
# =============================================================================

# Groq API (ultra-fast, 14,400 requests/day free) - RECOMENDADO
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek API (good quality alternative)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Default LLM Provider (groq or deepseek)
LLM_PROVIDER=deepseek

# LLM Generation Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_MAX_TOKENS_GROQ=850

# =============================================================================
# FAQ System Configuration
# =============================================================================

# FAQ Similarity Thresholds (0.0-1.0)
FAQ_HIGH_THRESHOLD=0.75      # >= 75%: Strong match - FAQ only
FAQ_MEDIUM_THRESHOLD=0.65    # >= 65%: Medium match - FAQs + docs

# Number of FAQs/Docs to retrieve per match type
FAQ_TOP_K=5                  # Max FAQs to retrieve
FAQ_NUM_HIGH=3               # Top-N FAQs for high match
FAQ_NUM_MEDIUM=2             # Top-N FAQs for medium match
FAQ_DOCS_MEDIUM=2            # Top-N docs for medium match

# Temperature per context type
FAQ_TEMP_FAQ_ONLY=0.1        # Very deterministic for exact FAQs
FAQ_TEMP_HYBRID=0.2          # Slightly creative for hybrid
FAQ_TEMP_DOCS_ONLY=0.3       # More flexible for general docs

# =============================================================================
# Document Retrieval Configuration
# =============================================================================

# Default number of documents to retrieve
RETRIEVAL_TOP_K=3

# Minimum similarity threshold to consider a document relevant
RETRIEVAL_MIN_SIMILARITY=0.3

# Maximum documents to retrieve with threshold filtering
RETRIEVAL_MAX_DOCS=10

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding model (default: BAAI/bge-m3)
EMBEDDING_MODEL=BAAI/bge-m3

# Embedding dimensions (BGE-M3 = 1024)
EMBEDDING_DIM=1024

# Device for embedding model (cpu, cuda, mps)
EMBEDDING_DEVICE=cpu

# =============================================================================
# ChromaDB Configuration
# =============================================================================

# Storage path for ChromaDB
CHROMA_STORAGE_PATH=data/chroma

# Collection name
CHROMA_COLLECTION=documents

# Similarity metric (cosine, l2, ip)
CHROMA_SIMILARITY=cosine

# =============================================================================
# Document Ingestion Configuration
# =============================================================================

# Documents folder
DOCS_FOLDER=data/docs

# FAQ subfolder
FAQ_FOLDER=data/docs/faq

# Enable document chunking (true/false)
ENABLE_CHUNKING=false

# Chunk size and overlap (if chunking enabled)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# Chatbot Configuration
# =============================================================================

# Maximum conversation history size
CHATBOT_MAX_HISTORY=10

# Enable FAQ system (true/false)
CHATBOT_ENABLE_FAQ=true

# =============================================================================
# API Configuration
# =============================================================================

# API Host and Port
API_HOST=127.0.0.1
API_PORT=8000

# CORS allowed origins (comma-separated)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Request timeout (seconds)
API_REQUEST_TIMEOUT=30

# Logging level (debug, info, warning, error)
API_LOG_LEVEL=info

